<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--<ImageView-->
    <!--android:id="@+id/imageView2"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="200dp"-->
    <!--android:background="@drawable/forgot"-->
    <!--android:src="@drawable/key_icon" />-->

    <com.alexzh.circleimageview.CircleImageView
        android:id="@+id/banar1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/profile1"
        android:layout_marginTop="75dp"
        android:layout_gravity="center"
        app:view_borderWidth="2dp"
        app:view_borderColor="#cccccc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="12"
        android:paddingLeft="35dp"
        android:paddingTop="40dp"
        android:paddingBottom="40dp"
        android:paddingRight="35dp">

        <customfonts.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:textSize="22dp"
            android:textColor="@color/colorAccent"
            android:layout_gravity="center"/>



        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_rounded_input_field" />

            <TextView
                android:id="@+id/Tnewpwd"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="24dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="New Password"
                android:textSize="16sp"
                android:background="@android:color/white"
                android:visibility="invisible"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"
                android:hint="New Password"
                android:textColorHint="@color/hint_color12"
                app:hintTextAppearance="@style/HintTextStyle">

                <EditText
                    android:id="@+id/input_newpwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="30dp"
                    android:inputType="text"
                    android:singleLine="true"
                    android:background="@android:color/transparent"/>
            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_rounded_input_field" />

            <TextView
                android:id="@+id/Tconfpwd"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="24dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Confirm Password"
                android:textSize="16sp"
                android:background="@android:color/white"
                android:visibility="invisible"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"
                android:hint="Confirm Password"
                android:textColorHint="@color/hint_color12"
                app:hintTextAppearance="@style/HintTextStyle">

                <EditText
                    android:id="@+id/input_confpwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="30dp"
                    android:inputType="text"
                    android:singleLine="true"
                    android:background="@android:color/transparent"/>
            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>


        <Button android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:text="Change Password"
            android:background="@drawable/round_button"
            android:layout_marginTop="15dp"
            android:textColor="@android:color/white"/>




    </LinearLayout>



</LinearLayout>