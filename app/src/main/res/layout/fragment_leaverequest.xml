<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="100dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Please Select Leave Type"
            android:textSize="15dp"
            android:textColor="@color/colorPrimary"/>

        <LinearLayout
            android:id="@+id/input_companyname"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_border_edittext">

            <Spinner
                android:id="@+id/leave_spinner"
                android:layout_width="match_parent"
                android:layout_height="40dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_border_edittext">


            <EditText
                android:id="@+id/input_fromDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:inputType="date"
                android:hint="From Date"
                android:focusable="false"
                android:singleLine="true"
                android:textColorHint="@color/colorPrimary"
                android:background="@android:color/transparent"/>


        </LinearLayout>



        <!--<android.support.design.widget.TextInputLayout-->
            <!--android:id="@+id/input_layout_fromDate"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content">-->

            <!--<EditText-->
                <!--android:id="@+id/input_fromDate"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:inputType="date"-->
                <!--android:editable="false"-->
                <!--android:hint="From Date" />-->
        <!--</android.support.design.widget.TextInputLayout>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_border_edittext">


            <EditText
                android:id="@+id/input_toDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:inputType="date"
                android:hint="To Date"
                android:focusable="false"
                android:singleLine="true"
                android:textColorHint="@color/colorPrimary"
                android:background="@android:color/transparent"/>


        </LinearLayout>



        <!--<android.support.design.widget.TextInputLayout-->
            <!--android:id="@+id/input_layout_toDate"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content">-->

            <!--<EditText-->
                <!--android:id="@+id/input_toDate"-->
